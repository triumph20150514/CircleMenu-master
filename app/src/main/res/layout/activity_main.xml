<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zjun="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.hitomi.cmlibrary.CircleMenu
        android:id="@+id/circle_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <com.hitomi.circlemenu.CircleMenu
        android:id="@+id/circle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <view.CircleDotProgressBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="1dp"
        zjun:isPercentFontSystem="true"
        zjun:percentTextSize="60sp"
        zjun:unitText="åˆ†"
        zjun:unitTextAlignMode="CN"
        zjun:unitTextSize="30sp" />

    <com.hitomi.circlemenu.refresh.TrimphRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ListView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>

    </com.hitomi.circlemenu.refresh.TrimphRefreshLayout>


    <ImageButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:background="@color/Blue"
        android:src="@drawable/ic_cloud_black_24dp"
        android:stateListAnimator="@animator/ra" />

</RelativeLayout>
